{
  "name": "Shabbatlify",
  "description": "Pasue removal for continuous playing. Bypasses the \"are you still watching\"? limitation. You can also set links to on any schedule",
  "version": "1.0.11",
  "manifest_version": 2,
  "icons": {
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "content_scripts": [
    {
      "js": [
        "js/contentScript.js"
      ],
      "matches": [
        "*://www.netflix.com/*",
        "*://www.peacocktv.com/*",
        "*://www.amazon.com/*",
        "*://rumble.com/*"
      ]
    }
  ],
  "background": {
    "scripts": [
      "js/background.js",
      "js/moment.min.js",
      "js/util.js"
    ]
  },
  "options_page": "options/options.html",
  "permissions": [
    "storage",
    "tabs"
  ]
}